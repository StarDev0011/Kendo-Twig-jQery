doctype html

- var isManager;
- var isOps;
- var displayName;
- var message;

html
  head
    title NJCDD Database
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description", content="NJCDD Database")
    meta(name="author", content="Anthony Software Group, LLC")
    link(rel="icon", type="image/x-icon", href="images/njcdd.ico")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css",
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx",
      crossorigin="anonymous")
    link(rel="stylesheet", href="stylesheets/fontawesome.min.css")
    link(rel="stylesheet", href="stylesheets/solid.min.css")
    link(rel="stylesheet", href="stylesheets/brands.min.css")
    link(rel="stylesheet", href="stylesheets/njcdd.css")
  body
    nav(class="navbar navbar-light bg-light p-3")
      div(class="d-flex col-12 col-md-3 col-lg-2 mb-2 mb-lg-0 flex-wrap flex-md-nowrap justify-content-between")
        a(class="navbar-brand" href="#")
          img(class="navbar-brand navbar-img" src="images/njcdd.png" alt="NJCDD Logo" loading="lazy")
        button(class="navbar-toggler d-md-none collapsed mb-3" type="button"
          data-toggle="collapse" data-target="#sidebar" aria-controls="sidebar"
          aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
      div(class="col-12 col-md-5 col-lg-8 d-flex align-items-center justify-content-md-end mt-3 mt-md-0")
        div(class="dropdown")
          button(class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
            data-toggle="dropdown" aria-expanded="false")
            | Hello Gary Brown
          ul(class="dropdown-menu" aria-labelledby="dropdownMenuButton")
            li
              a(class="dropdown-item" href="#") Settings
            li
              a(class="dropdown-item" href="#") Sign Out

    block content

    footer(class="pt-5 d-flex justify-content-between")
      span
        | &copy; 2022
        a(href="https://njcdd.org")
          | New Jersey Centers for Developmental Disabilities
      ul(class="nav m-0")
        li(class="nav-item")
          a(class="nav-link text-secondary" aria-current="page" href="#")
            | Privacy Policy
        li(class="nav-item")
          a(class="nav-link text-secondary" aria-current="page" href="#")
            | Terms and Conditions

  block script
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js",
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo",
      crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js",
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa",
      crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.6.1.min.js",
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=",
      crossorigin="anonymous")
    script(src="https://buttons.github.io/buttons.js" async="true" defer="true")
    script(src="javascripts/njcdd.js")
