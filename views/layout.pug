doctype html

- var isAdmin;
- var isOps;
- var name;

html
  head
    title NJCDD Database
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description", content="NJCDD Database")
    meta(name="author", content="Anthony Software Group, LLC")
    link(rel="icon", type="image/x-icon", href="images/njcdd.ico")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css",
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx",
      crossorigin="anonymous")
    link(rel="stylesheet", href="stylesheets/neo.css")
    link(rel="stylesheet", href="stylesheets/njcdd.css")
  body
    block header
      nav(class="navbar navbar-expand-lg navbar-light bg-light")
        a(href="/")
          img(class="navbar-brand navbar-img" src="images/njcdd.png" alt="NJCDD")
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarSupportedContent")
          ul(class="navbar-nav mr-auto")
            li(class="nav-item")
              a(class=(isAdmin === true ? 'nav-link visible' : 'nav-link invisible'), href="#") Admin
            li(class="nav-item")
              a(class=(isOps === true ? 'nav-link visible' : 'nav-link invisible'), href="#") Members
            li(class="nav-item")
              a(class=(typeof name === 'undefined' ? 'nav-link invisible' : 'nav-link visible'), href="/") Log Out

    block content

    block script
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js",
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa",
        crossorigin="anonymous")
      script(src="https://code.jquery.com/jquery-3.6.1.min.js",
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=",
        crossorigin="anonymous")
      script(src="javascripts/njcdd.js")
