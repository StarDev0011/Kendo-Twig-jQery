doctype html

- var isManager;
- var isOps;
- var displayName;
- var message;

html
  head
    title NJCDD Database
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description", content="NJCDD Database")
    meta(name="author", content="Anthony Software Group, LLC")
    link(rel="icon", type="image/x-icon", href="images/njcdd.ico")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css",
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx",
      crossorigin="anonymous")
    link(rel="stylesheet", href="stylesheets/neo.css")
    link(rel="stylesheet", href="stylesheets/njcdd.css")
  body
    block header
      nav(class="navbar navbar-expand-lg navbar-light bg-light")
        div(class="container-fluid")
          // Toggle button
          button(class="navbar-togger" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
            i(class="fas fa-bars")

          // Collapsible wrapper
          div(class="collapse navbar-collapse" id="navbarSupportedContent")
            // Navbar brand
            a(class="navbar-brand mt-2 mt-lg-0" href=(typeof displayName === 'undefined' ? '/' : '/home'))
              img(class="navbar-brand navbar-img" src="images/njcdd.png" alt="NJCDD Logo" loading="lazy")

            // Left elements
            ul(class="navbar-nav me-auto mb-2 mb-lg-0")
              li(class="nav-item")
                a(class=(isManager === true ? 'nav-link visible' : 'invisible') href="#")
                  | Admin
              li(class="nav-item")
                a(class=(isOps === true ? 'nav-link visible' : 'invisible') href="#")
                  | Member Search

          // Right elements
          div(class=(typeof displayName === 'undefined' ? 'invisible' : 'dropdown visible'))
            button(class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
              data-bs-toggle="dropdown" aria-expanded="false")
              i(class="fas fa-user-alt")
                | #{displayName}
            ul(class="dropdown-menu" aria-labelledby="dropdownMenuButton")
              li
                a(class="dropdown-item" href="#")
                  | My Profile
              li
                a(class="dropdown-item" href="/logout")
                  | Log Out

  block content

  block script
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js",
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa",
      crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.6.1.min.js",
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=",
      crossorigin="anonymous")
    script(src="javascripts/njcdd.js")
